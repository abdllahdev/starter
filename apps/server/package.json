{
  "name": "@starter/server",
  "type": "module",
  "module": "index.ts",
  "scripts": {
    "build": "tsdown",
    "clean": "git clean -xdf build node_modules dist .turbo .tsbuildinfo",
    "db:generate": "bun with-env bun run drizzle-kit generate",
    "db:migrate": "bun with-env bun run drizzle-kit migrate",
    "db:pull": "bun with-env bun run drizzle-kit pull",
    "db:push": "bun with-env bun run drizzle-kit push",
    "db:studio": "bun with-env bun run drizzle-kit studio",
    "dev": "bun --watch src/server.ts",
    "start": "bun --import ./dist/instrument.server.mjs ./dist/server.mjs",
    "typecheck": "tsc --noEmit",
    "with-env": "dotenv -e .env.local --"
  },
  "dependencies": {
    "@axiomhq/pino": "^1.3.1",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/exporter-trace-otlp-proto": "^0.208.0",
    "@opentelemetry/resources": "^2.2.0",
    "@opentelemetry/sdk-node": "^0.208.0",
    "@opentelemetry/sdk-trace-base": "^2.2.0",
    "@opentelemetry/semantic-conventions": "^1.38.0",
    "@orpc/experimental-pino": "^1.12.3",
    "@orpc/otel": "^1.13.4",
    "@sentry/bun": "^10.30.0",
    "@starter/api": "workspace:*",
    "@starter/auth": "workspace:*",
    "@starter/env": "workspace:*",
    "pino": "^10.1.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@starter/tsconfig": "workspace:*",
    "@types/bun": "latest",
    "@types/react": "^19.2.7",
    "pino-pretty": "^13.1.3",
    "tsdown": "^0.19.0-beta.1",
    "typescript": "^5.9.3"
  }
}
